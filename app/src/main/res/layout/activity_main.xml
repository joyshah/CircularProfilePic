<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.library.circularprofileupload.circularprofileupload.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/circularBorderColor">


        <com.library.circularprofileupload.circularprofilepiclibrary.CircularProfile
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:src="@drawable/joy1"
            app:circular_border_color="@color/colorAccent"
            app:circular_border_radius="1000"
            app:concentric_circle_color="#b91a1a"
            app:concentric_circle_radius="30" />

    </RelativeLayout>

</RelativeLayout>
